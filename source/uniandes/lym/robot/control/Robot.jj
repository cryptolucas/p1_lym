			ArrayList<ArrayList<String>> bloque = defprocsConParam.get(key);
			for (ArrayList<String> arr: bloque) {
			  
				if(arr.size() == 2) { 
					if (arr.get(1) instanceof String) { 
						String a1 = Integer.toString(a);
						arr.set(1, a1); }
							
					 				}
					 
				if(arr.size() == 3) {

				  if (arr.get(1) instanceof String && arr.get(2) instanceof String) { 
						String a1 = Integer.toString(a);
						String b1 = Integer.toString(b);
						arr.set(1, a1);
						arr.set(2, b1); }
				
									}


	 				}
	 				
	 			RunBlock(bloque);
			}
		
	}  
